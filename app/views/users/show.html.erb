<h1><%= @user.email %></h1>

<h2>Created Events</h2>
<ul>
  <% @user.created_events.each do |event| %>
    <li><%= link_to event.title, event_path(event) %></li>
  <% end %>
</ul>

<h2>Upcoming Events</h2>
<ul>
  <% @upcoming_events.each do |event| %>
    <li><%= link_to event.title, event_path(event) %></li>
  <% end %>
</ul>

<h2>Past Events</h2>
<ul>
  <% @past_events.each do |event| %>
    <li><%= link_to event.title, event_path(event) %></li>
  <% end %>
</ul>
